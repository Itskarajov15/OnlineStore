@model AddProductViewModel

@{
    ViewData["Title"] = "Add Product";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-lg-3 col-xl-6">
        <h2 class="heading-margin text-center">Add Product</h2>

        <div asp-validation-summary="ModelOnly"></div>

        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label"></label>
                <input asp-for="@Model.Title" class="form-control">
                <span asp-validation-for="@Model.Title" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label"></label>
                <input asp-for="@Model.Price" class="form-control">
                <span asp-validation-for="@Model.Price" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Quantity" class="form-label"></label>
                <input asp-for="@Model.Quantity" class="form-control">
                <span asp-validation-for="@Model.Quantity" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Specifications" class="form-label"></label>
                <textarea asp-for="@Model.Specifications" rows="4" class="form-control"></textarea>
                <span asp-validation-for="@Model.Specifications" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label"></label>
                <textarea asp-for="@Model.Description" rows="4" class="form-control"></textarea>
                <span asp-validation-for="@Model.Description" class="small text-danger"></span>
            </div>
            <div class="col-12">
                <label class="col-form-label">Select Additional Images</label>
                <input asp-for="@Model.ProductImages" type="file" class="form-control" multiple />
                <span asp-validation-for="@Model.ProductImages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CategoryId"></label>
                <select asp-for="@Model.CategoryId" class="form-control">
                    @foreach (var city in Model.Categories)
                    {
                        <option value="@city.Id">@city.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.BrandId"></label>
                <select asp-for="@Model.BrandId" class="form-control">
                    @foreach (var city in Model.Brands)
                    {
                        <option value="@city.Id">@city.Name</option>
                    }
                </select>
            </div>

            <input class="btn btn-primary mt-2" type="submit" value="Save" />
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}